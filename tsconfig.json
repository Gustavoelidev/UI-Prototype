{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", // Adicione esta linha
    "paths": {
      "@pages/*": ["pages/*"] // Caminho relativo ao diret√≥rio base
    }
  },
  "include": [
    "src/**/*.ts" // Inclui todos os arquivos TypeScript na pasta src
  ],
  "exclude": [
    "node_modules" // Exclui a pasta node_modules
  ]
}